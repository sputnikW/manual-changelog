{
  "include": [
    "lib/**/*"
  ],
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["lib/*"]
    }
  }
}
